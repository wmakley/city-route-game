{{template "layout" .}}
{{define "title"}}Edit {{.BoardForm.Name}} - Admin{{end}}

{{define "content"}}
<div class="container">

	{{with .BoardForm}}
	<h1>Edit {{.Name}}</h1>

	<div data-controller="edit-form">
		<div class="float-end" style="margin-top: -50px;">
			<button
				type="button"
				data-edit-form-target="renameButton"
				data-action="edit-form#toggle"
				class="btn btn-link">
				Rename
			</button>
			<a href="/boards">Back</a>
		</div>
		<div data-edit-form-target="form" style="display:none;">
			{{template "_form" .}}
		</div>
	</div>
	{{end}}

	<div id="board-editor" data-board-json="{{.BoardJSON}}"></div>
</div>
{{end}}
